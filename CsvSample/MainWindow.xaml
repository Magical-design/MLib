<Window x:Class="CsvSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsvSample"
        mc:Ignorable="d"
       
        Title="CsvSample" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dg1" />
        <Button x:Name="btImport" Content="导入" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="68,36,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="btImport_Click"/>
        <Button x:Name="btExport"  Content="导出" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="68,104,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="btExport_Click"/>
        <Button x:Name="btInsertLine"  Content="插入" Grid.Column="1" HorizontalAlignment="Left" Height="50" Margin="68,170,0,0" VerticalAlignment="Top" Width="120" FontSize="20" Click="btInsertLine_Click"/>
        <TextBlock x:Name="txbData1" Grid.Column="1" HorizontalAlignment="Left" Height="62" Margin="50,253,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="152"/>

    </Grid>
</Window>
